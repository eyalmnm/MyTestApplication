<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="NotificationContent" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="ListenAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="colorAccent">#4d4d4d</item>
        <item name="colorPrimary">#f37721</item>
        <item name="colorPrimaryDark">#4d4d4d</item>
        <item name="colorControlNormal">#e6e6e6</item>
        <item name="colorControlActivated">#f37721</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppButton">
        <item name="android:background">@drawable/app_button_bg_color_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

</resources>
